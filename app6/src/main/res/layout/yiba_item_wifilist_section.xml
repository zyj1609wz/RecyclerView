<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yiba_wifi_head_rel"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ff0">

    <TextView
        android:id="@+id/bg_middle_grey"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/yiba_base" />

    <TextView
        android:id="@+id/section_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bg_middle_grey"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:textColor="@color/yiba_item_content"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/yiba_setting_grey" />

    <ImageView
        android:id="@+id/section_tips"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/section_title"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/section_title"
        android:layout_marginRight="15dp"
        android:background="#fff"
        android:src="@drawable/yiba_wifi_tips" />
</RelativeLayout>